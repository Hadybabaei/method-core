  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:local": "nest start --watch --exec \"cross-env dotenv_config_path=.env.local node -r dotenv/config\"",
    "start:dev": "nest start --watch --exec \"cross-env dotenv_config_path=.env.dev node -r dotenv/config\"",
    "start:debug": "nest start --debug --watch",
    "start:debug:dev": "nest start --debug --watch --exec \"cross-env dotenv_config_path=.env.dev node -r dotenv/config\"",
    "start:debug:local": "nest start --debug --watch --exec \"cross-env dotenv_config_path=.env.local node -r dotenv/config\"",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json --detectOpenHandles",
    "test:e2e:cov": "npm run test:e2e -- --coverage",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.1",
    "ioredis": "^5.6.1",
    "jalaali-js": "^1.2.8",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.10",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@types/node": "^24.0.10",
    "@types/passport-jwt": "^4.0.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
